<meta http-equiv="refresh" content="90;URL=<%= root_url %>">
<% if current_user %>
  <% unless @new_tweets.empty? %>
    <% provide(:count_new_tweets, "(#{@new_tweets.count}) ") %>
  <% end %>
  <div class="col-md-3 container sidebar">
    <%= render 'toppages/profile' %>
    <% if first_login? %>
      <%= render 'toppages/recommend' %>
    <% end %>
  </div>
  <%= render 'toppages/timeline' %>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to TWTR CLIENT</h1>
    <%= link_to "Login with Twitter", '/auth/twitter', class: "btn btn-lg btn-primary" %>
  </div>
<% end %>